<?xml version="1.0" encoding="utf-8"?>
<com.xyt.app.pullableview.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/refresh_head" />
    <!-- 支持所有实现Pullable接口的View -->
    <com.xyt.app.pullableview.PullableGridView
        android:id="@+id/id_PullableGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.xyt.app.pullableview.PullableGridView>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/refresh_foot" >
    </include>

    </com.xyt.app.pullableview.PullToRefreshLayout>
